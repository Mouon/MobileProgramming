<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment"
    android:background="#FEFAE0">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#189AAA"
        android:textAlignment="center"
        android:text="FoodJoa"
        android:textSize="50dp"
        />
    <ScrollView

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/moneybtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_style2"
                android:textColor="#F8FFE5"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:text="이번 주 얼마를 사용했는지 보고싶어요!"

                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/moneyLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:id="@+id/moneybub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/speech_bubble"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="이거 \n 말 커져도 유지 되는지 test \n"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/moneybubtail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/speech_bubble_tail"
                    app:layout_constraintBottom_toBottomOf="@+id/moneybub1"
                    app:layout_constraintLeft_toRightOf="@+id/moneybub1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/moneyLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:id="@+id/moneybub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/speech_bubble2"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="이거 \n 말 커져도 유지 되는지 test \n"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/moneybubtail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/speech_bubble_tail2"
                    app:layout_constraintBottom_toBottomOf="@+id/moneybub2"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <android.widget.Button
                android:id="@+id/reservebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_style2"
                android:textColor="#F8FFE5"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:text="내가 한 예약을 보여주세요!"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reserveLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:id="@+id/reservebub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/speech_bubble"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="이거 \n 말 커져도 유지 되는지 test \n"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/reservebubtail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/speech_bubble_tail"
                    app:layout_constraintBottom_toBottomOf="@+id/reservebub1"
                    app:layout_constraintLeft_toRightOf="@+id/reservebub1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reserveLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:id="@+id/reservebub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/speech_bubble2"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="이거 \n 말 커져도 유지 되는지 test \n"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/reservebubtail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/speech_bubble_tail2"
                    app:layout_constraintBottom_toBottomOf="@+id/reservebub2"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <android.widget.Button
                android:id="@+id/recommandbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_style2"
                android:textColor="#F8FFE5"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:text="추천할만한 품목들을 알려주세요!"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recommandLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:id="@+id/recommandbub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/speech_bubble"
                    android:gravity="right"
                   android:padding="10dp"
                    android:text="이거 \n 말 커져도 유지 되는지 test \n"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/recommandbubtail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/speech_bubble_tail"
                    app:layout_constraintBottom_toBottomOf="@+id/recommandbub1"
                    app:layout_constraintLeft_toRightOf="@+id/recommandbub1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recommandLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:id="@+id/recommandbub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/speech_bubble2"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="이거 \n 말 커져도 유지 되는지 test \n"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/recommandbubtail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/speech_bubble_tail2"
                    app:layout_constraintBottom_toBottomOf="@+id/recommandbub2"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>